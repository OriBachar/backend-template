{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@microservices-backend/shared-types": ["./packages/shared-types/dist"],
      "@microservices-backend/shared-utils": ["./packages/shared-utils/dist"],
      "@microservices-backend/shared-config": ["./packages/shared-config/dist"]
    },
    "typeRoots": ["./node_modules/@types"],
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "dist", "build"]
} 